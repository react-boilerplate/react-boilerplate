    "command",
    "child_process"
  ],
  "author": "Aleksandr Tsertkov <tsertkov@gmail.com>",
  "license": {
    "type": "MIT",
    "url": "https://github.com/tsertkov/exec-sh/blob/master/LICENSE"
  },
  "bugs": {
    "url": "https://github.com/tsertkov/exec-sh/issues"
  },
  "dependencies": {
    "merge": "^1.1.3"
  },
  "devDependencies": {
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.2",
    "jsdoc": "^3.3.0-alpha8",
    "jshint": "^2.5.1",
    "mocha": "^1.20.1",
    "sinon": "^1.10.2"
  }
