{
  "name": "reactjs-boilerplate",
  "version": "2.4.0",
  "description": "Quick setup for new React.js applications featuring Redux, hotâ€“reloading, PostCSS, react-router and Mocha.",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "chalk": "^1.1.1",
    "compression": "^1.6.1",
    "connect-history-api-fallback": "^1.1.0",
    "express": "^4.13.4",
    "fontfaceobserver": "^1.6.3",
    "history": "^2.0.0",
    "immutable": "^3.7.6",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.4.1",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.0",
    "redux": "^3.3.1",
    "redux-immutable": "^3.0.6",
    "redux-saga": "^0.9.5",
    "reselect": "^2.2.1",
    "sanitize.css": "^3.3.0",
    "scroll-behavior": "^0.3.2",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^6.0.1",
    "babel-loader": "^6.2.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.1",
    "cheerio": "^0.20.0",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^2.0.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.1",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.2",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.14.0",
    "imports-loader": "^0.6.5",
    "ip": "^1.1.2",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "jscs": "^2.11.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-firefox-launcher": "^0.1.7",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^2.0.0",
    "karma-safari-launcher": "^0.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lint-staged": "^0.1.1",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "ngrok": "2.1.6",
    "null-loader": "^0.1.1",
    "offline-plugin": "^2.0.4",
    "open": "0.0.5",
    "plop": "^1.5.0",
    "postcss-cssnext": "^2.5.1",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.8.0",
    "postcss-reporter": "^1.3.0",
    "psi": "^2.0.2",
    "react-addons-test-utils": "^0.14.6",
    "rimraf": "^2.5.2",
    "sanitize.css": "^3.3.0",
    "shelljs": "^0.6.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "stylelint": "^5.2.1",
    "stylelint-config-standard": "^4.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.11",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/mxstbr/react-boilerplate.git"
  },
  "scripts": {
    "prebuild": "npm run test && npm run build:clean",
    "build:clean": "rimraf ./build/*",
    "build": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --colors -p",
    "analyze": "node ./internals/scripts/analyze.js",
    "start": "npm run start:tunnel",
    "start:tunnel": "cross-env NODE_ENV=development node server",
    "start:prod": "cross-env NODE_ENV=production node server",
    "pagespeed": "node ./internals/scripts/pagespeed.js",
    "setup": "node ./internals/scripts/setup.js",
    "clean": "shjs ./internals/scripts/clean.js",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "npm run lint:eslint && npm run lint:jscs",
    "lint:js:staged": "npm run lint:eslint:staged && npm run lint:jscs:staged",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:eslint:staged": "eslint-staged",
    "lint:jscs": "jscs .",
    "lint:jscs:staged": "jscs-staged",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:css:staged": "stylelint-staged",
    "lint:staged": "npm run lint:js:staged && npm run lint:css:staged",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test karma start internals/testing/karma.conf.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "pre-commit": "lint:staged",
  "author": "Max Stoiber",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-console": 0,
      "react/prop-types": 0,
      "max-len": 0,
      "prefer-template": 0,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "arrow-body-style": [
        2,
        "as-needed"
      ]
    }
  },
  "jscsConfig": {
    "preset": "airbnb",
    "esnext": true,
    "validateQuoteMarks": null,
    "requireTrailingComma": null,
    "maximumLineLength": null,
    "maxErrors": null,
    "requireCamelCaseOrUpperCaseIdentifiers": null,
    "requireShorthandArrowFunctions": null,
    "excludeFiles": [
      "build/**",
      "coverage/**",
      "docs/**",
      "node_modules/**"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "font-family-name-quotes": "single-where-recommended",
      "indentation": 2
    }
  }
}
